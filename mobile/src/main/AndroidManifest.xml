<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hackny.awkscape" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".GestureReceiverService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <activity
            android:name=".AlarmActivity"
            android:label="@string/title_activity_alarm"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <receiver android:name=".AlarmReceiver" />

        <activity
            android:name=".BlackScreen"
            android:label="@string/title_activity_black_screen"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".LockscreenMessage"
            android:label="@string/title_activity_lockscreen_message"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".UnlockedMessage"
            android:label="@string/title_activity_unlocked_message"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
